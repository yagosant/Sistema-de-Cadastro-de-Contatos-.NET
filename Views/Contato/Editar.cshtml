@model ContatoModel
@{
    ViewData["Title"] = "Editar Contato";
}

<div class="text-center">
    <h1 class="display-4">Editar Contato</h1>
</div>

<form asp-controller="Contato" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id"/>

    <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" id="nome" aria-describedby="nameHelp">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">E-mail</label>
        <input type="email" asp-for="Email" class="form-control" id="email" aria-describedby="emailHelp">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="mb-3">
        <label for="celular" class="form-label">Telefone</label>
        <input type="tel" asp-for="Celular" class="form-control" id="celular" aria-describedby="tellHelp">
        @Html.ValidationMessageFor(x => x.Celular)
    </div>

    <button type="submit" class="btn btn-warning btn-block">Alterar</button>
    <a role="button" class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index">Voltar</a>

</form>